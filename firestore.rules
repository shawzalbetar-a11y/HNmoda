rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default for security
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to gallery items for everyone
    match /gallery/{itemId} {
      allow get, list: if true;
      // Allow create, update, delete only for authenticated users (admins)
      allow write: if request.auth != null;
    }

    // Allow users to manage their own profile data
    match /users/{userId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
