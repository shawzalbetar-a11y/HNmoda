rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public Read-Only Access
    // Since the admin dashboard is removed, we only allow public read access
    // to the gallery and configs. Write access is disabled for everyone via client SDKs.
    // Database updates must be done via Firebase Console or Admin SDKs if needed in future.

    match /gallery/{itemId} {
      allow read: if true;
      allow write: if false;
    }

    match /configs/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
