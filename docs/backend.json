{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Whether the user has admin privileges."
        }
      },
      "required": ["email"]
    },
    "galleryItem": {
      "title": "Gallery Item",
      "description": "An image or video in the gallery.",
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the media (webp image or video)."
        },
        "type": {
          "type": "string",
          "enum": ["image", "video"],
          "description": "Type of the media."
        },
        "category": {
            "type": "string",
            "enum": ["models", "collections", "products"],
            "description": "The category of the work item."
        },
        "name": {
            "type": "string",
            "description": "Name of the gallery item."
        },
        "price": {
            "type": "number",
            "description": "Price of the product. Only applicable if category is 'products'."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of creation."
        }
      },
      "required": ["url", "type", "category", "name", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public user profile information."
    },
    "/gallery/{itemId}": {
        "schema": {
            "$ref": "#/entities/galleryItem"
        },
        "description": "Stores all gallery items, including images and videos."
    }
  }
}
